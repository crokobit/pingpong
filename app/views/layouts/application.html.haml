!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Pingpong'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Pingpong'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    .container{:role => "main", class: controller.controller_name }
      = render 'layouts/messages'
      = yield
    %footer.container.text-center
      %hr
      Magic by #{link_to "netguru.co", "https://netguru.co"}
      = link_to "https://twitter.com/madsheeppl" do
        = image_tag("sheep.png")
